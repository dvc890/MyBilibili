            <TextView android:textAppearance="@style/TextAppearance.App.Subtitle" android:textSize="13sp" android:textColor="@color/theme_color_live_text_assist_dark" android:gravity="center_vertical" android:id="@+id/text_refresh" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/live_home_refresh_tips" android:maxLines="1"/>
            <ImageView android:id="@+id/icon_refresh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:src="@drawable/ic_live_home_refresh" android:tint="@color/theme_color_live_text_assist_dark"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

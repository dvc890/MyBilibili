<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:fresco="http://schemas.android.com/apk/com.facebook.drawee" xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/input_layout" android:background="@color/daynight_color_view_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
        <ImageView android:id="@+id/emotion" android:background="?attr/selectableItemBackgroundBorderless" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="4dp" android:src="@drawable/ic_emoji" android:scaleType="centerInside" android:tint="@color/theme_color_secondary"/>

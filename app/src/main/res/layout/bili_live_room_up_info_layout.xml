        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/line2" android:paddingTop="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content">

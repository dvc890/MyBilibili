            <TextView android:textSize="@dimen/text_size_medium" android:textColor="@color/live_daynight_text_color_gray" android:gravity="bottom" android:layout_gravity="bottom" android:id="@+id/info_online" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="7dp" android:includeFontPadding="false"/>
            <TextView android:textSize="@dimen/text_size_medium" android:textColor="@color/live_daynight_text_color_gray" android:gravity="center" android:layout_gravity="bottom" android:id="@+id/attentions" android:paddingRight="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0" android:includeFontPadding="false"/>
            <TextView android:textSize="@dimen/text_size_medium" android:textColor="@color/live_daynight_text_color_gray" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/area_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:includeFontPadding="false" android:drawableRight="@drawable/ic_live_room_area_tag_arrow_right" android:drawablePadding="3dp" android:drawableTint="@color/live_daynight_text_color_gray"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="match_parent">
        <!--<com.opensource.svgaplayer.SVGAImageView android:id="@+id/small_tv_attention" android:visibility="gone" android:layout_width="50dp" android:layout_height="20dp" android:layout_centerHorizontal="true" app:autoPlay="false" app:loopCount="1" app:source="live_attention_small_tv.svga"/>-->
        <TextView android:textSize="14sp" android:textColor="@color/live_daynight_text_color_white" android:gravity="center" android:id="@+id/add_to_attention" android:background="@drawable/shape_round_rect_bg_theme_color_corner_4" android:paddingTop="6dp" android:paddingBottom="6dp" android:visibility="visible" android:layout_width="60dp" android:layout_height="wrap_content" android:text="@string/attention_not_followed" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>

    </android.support.constraint.ConstraintLayout>
    <View android:layout_gravity="center" android:id="@+id/vertical" android:background="@drawable/shape_roundrect_orange_dark" android:visibility="invisible" android:layout_width="10dp" android:layout_height="10dp"/>
</FrameLayout>

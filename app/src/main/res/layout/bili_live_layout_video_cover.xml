    <ImageView android:id="@+id/cover" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginLeft="1dp" android:layout_marginTop="1dp" android:scaleType="centerCrop" android:src="@drawable/bili_default_image_tv" />

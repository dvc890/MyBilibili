    <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/active_bg" android:layout_width="match_parent" android:layout_height="@dimen/dp_20" android:scaleType="fitStart" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="@id/active_msg" app:layout_constraintEnd_toEndOf="@id/active_msg"/>

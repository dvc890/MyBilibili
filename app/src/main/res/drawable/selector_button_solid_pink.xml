<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:fresco="http://schemas.android.com/apk/com.facebook.drawee" xmlns:internal="http://schemas.android.com/apk/prv/res/android" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/corner_radius"/>
            <solid android:color="@color/theme_color_primary_dark"/>
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/theme_color_primary"/>
            <corners android:radius="@dimen/corner_radius"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/theme_color_primary" android:alpha="0.3"/>
            <corners android:radius="@dimen/corner_radius"/>
        </shape>
    </item>
</selector>
